<div class="container">


<%= form_tag do %>
  <div class="row">
    <div class="col-md-12">
      <div class="well login-form">
        <div class="login-wrapper">
          <form role="form">
	        <h2 class="login-title"><%= t "customer_sessions.new.title" %></h2>

	        <div class="form-group">
		      <%= label_tag :email, (t("customer_sessions.new.email")) %>
		      <%= text_field_tag :email, params[:email], class: "form-control", type: "email" %>
	        </div>
	        <div class="form-group">
		      <%= label_tag :password, (t("customer_sessions.new.password")) %>
              <%= password_field_tag :password, params[:password], class: "form-control", type: "email" %>
            </div>
            <div>
		      <%= submit_tag "Login", :class => 'btn btn-default login-button' %>
	        </div>
          </form>
          <p><%= link_to (t("customer_sessions.new.forgot")), new_password_reset_path %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>