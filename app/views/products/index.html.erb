<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Collaborator</th>
      <th>Description</th>
      <th>Options</th>
      <th>Image url</th>
      <th>Minimum Order</th>
      <th>Ending Date</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.collaborator.name %></td>
        <td><%= product.description %></td>
        <td><%= product.traits.pluck(:trait_name).join' ' %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= product.minbuy %></td>
        <td><%= product.end_date %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

