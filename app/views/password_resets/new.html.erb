<div class="container">



  <div class="row">
    <div class="col-md-12">
      <div class="well login-form">
        <div class="login-wrapper">
          
          	<h2><%= t "password_resets.new.title" %></h2>
          	<p><%= t "password_resets.new.instructions", role: "form" %></p>
            <%= form_tag password_resets_path, :method => :post do %>
            <div class="form-group">
              <label><%= t "password_resets.new.email" %></label>
              <%= text_field_tag :email, params[:email], class: "form-control", type: "email" %>
              </div>
          <%= submit_tag t("password_resets.new.submit"), :class => 'btn btn-default password-change' %>
           
          
        </div>
      </div>
    </div>
  </div>
  
<% end %>
</div>