<div class="container">
  <div class="row">
    <div class="col-md-12">
            <%= form_for(@customer) do |f| %>
            <% if @customer.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <%= notice %>
              <ul>
                <% @customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>
      <div class="well login-form">
        <div class="login-wrapper">
          <form role="form">
            
            <h3>Change Email</h3>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control", type: "email" %>
            </div>
          </form>
          <%= f.submit "Submit", class: "btn btn-default password-change" %>
        </div>
      </div>
    </div>
  </div>

 <% end %>
</div>